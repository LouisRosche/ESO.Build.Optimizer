# ESO Build Optimizer - Environment Variables Template
# Copy this file to .env and fill in the values
#
# IMPORTANT: Never commit .env to version control!

# =============================================================================
# Database Configuration (Neon PostgreSQL)
# =============================================================================

# Neon connection string - get from Neon dashboard
# Format: postgresql+asyncpg://user:password@host/database?sslmode=require
DATABASE_URL=postgresql+asyncpg://user:password@ep-xxx-xxx.region.aws.neon.tech/eso_optimizer?sslmode=require

# For local development with Docker Compose:
# DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/eso_optimizer

# =============================================================================
# Authentication
# =============================================================================

# JWT Secret Key - MUST be changed in production!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET_KEY=CHANGE_ME_IN_PRODUCTION_USE_SECURE_SECRET_KEY

# Token expiration
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# CORS Configuration
# =============================================================================

# Allowed origins (comma-separated)
# Local development:
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000

# Production (replace with your Vercel URL):
# ALLOWED_ORIGINS=https://your-app.vercel.app,https://your-custom-domain.com

# =============================================================================
# Application Settings
# =============================================================================

# Environment: development, staging, production
ENVIRONMENT=development

# Debug mode (enable for development, disable for production)
DEBUG=true

# API version prefix
API_V1_PREFIX=/api/v1

# =============================================================================
# Rate Limiting
# =============================================================================

# Requests per minute (per user)
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Requests per day (per user)
RATE_LIMIT_REQUESTS_PER_DAY=10000

# Burst size for rate limiting
RATE_LIMIT_BURST_SIZE=10

# =============================================================================
# ESO Game Data
# =============================================================================

# Current ESO patch version
CURRENT_PATCH=U48

# =============================================================================
# Optional: Redis (for production caching/rate limiting)
# =============================================================================

# Redis connection URL (optional, for production)
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Optional: Monitoring
# =============================================================================

# Sentry DSN for error tracking (optional)
# SENTRY_DSN=https://xxx@sentry.io/xxx

# =============================================================================
# Deployment-Specific (set in platform dashboard, not here)
# =============================================================================

# These are typically set in Vercel/Render dashboard:
# - PORT (set by platform)
# - VERCEL_URL (auto-set by Vercel)
# - RENDER_EXTERNAL_URL (auto-set by Render)
